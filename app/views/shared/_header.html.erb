<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand" do %>
      Star Wars Weather App <%= image_tag('icon.png', height: '25') %>
    <% end %>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <% if @city.present? %>
            <%= link_to @city, '#', class: "nav-link" %>
          <% end %>
        </li>

      </ul>

      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        <% if Current.user %>
          <li class="nav-item">
            <span class="navbar-text">Hello <%= Current.user.name %></span>
          </li>
          <li class="nav-item">
            <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-outline-secondary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", sign_up_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", sign_in_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <form class="d-flex">

        <%= form_tag(root_path, method: 'get', class: 'navbar-form navbar-right') do %>
          <%= search_field_tag 'search', nil, class: 'form-control me-2', placeholder: 'City' %>
          <%= submit_tag "Search", class: 'btn btn-primary', :name => nil %>
        <% end %>

      </form>
    </div>
  </div>
</nav>